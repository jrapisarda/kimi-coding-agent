{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectSpecification",
  "type": "object",
  "required": ["project", "architecture", "tasks", "testing", "documentation"],
  "properties": {
    "project": {
      "type": "object",
      "required": ["name", "description", "language", "package_manager"],
      "properties": {
        "name": {"type": "string"},
        "description": {"type": "string"},
        "language": {"type": "string"},
        "package_manager": {"type": "string"},
        "license": {"type": "string"},
        "repository": {"type": "string"},
        "version": {"type": "string"},
        "type": {"type": "string"},
        "complexity": {"type": "string"}
      }
    },
    "architecture": {
      "type": "object",
      "required": ["pattern", "components"],
      "properties": {
        "pattern": {"type": "string"},
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "responsibilities"],
            "properties": {
              "name": {"type": "string"},
              "responsibilities": {"type": "array", "items": {"type": "string"}},
              "dependencies": {"type": "array", "items": {"type": "string"}}
            }
          }
        }
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "deliverables"],
        "properties": {
          "id": {"type": "string"},
          "description": {"type": "string"},
          "deliverables": {"type": "array", "items": {"type": "string"}},
          "priority": {"type": "string"}
        }
      }
    },
    "testing": {
      "type": "object",
      "required": ["coverage_threshold", "test_types"],
      "properties": {
        "coverage_threshold": {"type": "number", "minimum": 0, "maximum": 1},
        "test_types": {"type": "array", "items": {"type": "string"}},
        "integration_requirements": {"type": "array", "items": {"type": "string"}}
      }
    },
    "documentation": {
      "type": "object",
      "required": ["audience", "artifacts"],
      "properties": {
        "audience": {"type": "string"},
        "artifacts": {"type": "array", "items": {"type": "string"}},
        "style_guide": {"type": "string"}
      }
    },
    "quality": {
      "type": "object",
      "properties": {
        "formatters": {"type": "array", "items": {"type": "string"}},
        "linters": {"type": "array", "items": {"type": "string"}},
        "type_checking": {"type": "string"}
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "targets": {"type": "array", "items": {"type": "string"}},
        "ci_cd": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
}
